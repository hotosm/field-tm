        {
          "localRoot": "${workspaceFolder}/src/backend/packages/osm-fieldwork/osm_fieldwork",
          "remoteRoot": "/opt/python/lib/python3.12/site-packages/osm_fieldwork"
        }
      ],
      "justMyCode": false
    }
  ]
}
